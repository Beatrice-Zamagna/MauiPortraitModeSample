<?xml version="1.0" encoding="utf-8" ?>
<pages:SecondPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:PortraitModeSampleInheritance.Pages.MainPages"
             x:Class="PortraitModeSampleInheritance.Pages.Landscape.SecondPageLandscape">
    <Grid RowDefinitions="*,*,*" HorizontalOptions="Center" VerticalOptions="Center">
        <Label 
             Text="This is the second page" 
             Grid.Row="0"
             HorizontalOptions="Center" 
             VerticalOptions="Center" />

        <Label 
             Text="This is a LANDSCAPE layout" 
             Grid.Row="1"
             HorizontalOptions="Center" 
             VerticalOptions="Center" />

        <!-- Since the DataTemplate has a code-behind, the button CAN have an event directly associated -->
        <!-- The event will be retrived through the inheritance -->
        <Button 
             Text="Go to main page" 
             Grid.Row="2"
             Clicked="Button_Clicked_SecondPage"
             HorizontalOptions="Center" 
             VerticalOptions="Center" />

    </Grid>
</pages:SecondPage>
