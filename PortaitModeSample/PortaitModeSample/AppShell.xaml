<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PortaitModeSample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sf="clr-namespace:Syncfusion.Maui.Toolkit.SegmentedControl;assembly=Syncfusion.Maui.Toolkit"
    xmlns:pages="clr-namespace:PortaitModeSample.Pages.Main"
    Shell.FlyoutBehavior="Flyout"
    Title="PortaitModeSample">

    <ShellContent
        Title="Main"
        Icon="{StaticResource IconDashboard}"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="main" />

    <ShellContent
        Title="Second"
        Icon="{StaticResource IconLight}"
        ContentTemplate="{DataTemplate pages:SecondPage}"
        Route="second" />


</Shell>
